{
  "manifest_version": 3,
  "name": "Spica DevTools",
  "short_name": "Spica DevTools",
  "version": "1.0.0",
  "description": "",
  "permissions": ["tabs", "sidePanel"],
  "action": {
    "default_popup": "index.html?#/popup",
    "default_title": "Spica DevTools",
    "default_icon": "assets/spica-logo.png"
  },
  "options_page": "index.html?#/options",
  "side_panel": {
    "default_path": "side_panel.html"
  },
  "content_scripts": [
    {
      "js": ["contentPage.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "background": {
    "service_worker": "serviceWorker.js"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
